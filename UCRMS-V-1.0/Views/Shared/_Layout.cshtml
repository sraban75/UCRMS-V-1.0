<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UCRMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/MyStyles/Navbar.css" rel="stylesheet" />
    <link href="~/MyStyles/round-about.css" rel="stylesheet" />

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("UCRMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span>Home</a></li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Department <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Department", "Save", "Departments")</li>
                            <li>@Html.ActionLink("View All Departments", "ViewDepartments", "Departments")</li>

                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Course<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Course", "Save", "Courses")</li>
                            <li>@Html.ActionLink("View Course's List", "ViewCourses", "Courses")</li>
                            <li>@Html.ActionLink("Add Teacher", "Save", "Teachers")</li>
                            <li>@Html.ActionLink("View Teacher's List", "ViewTeachers", "Teachers")</li>
                            <li>@Html.ActionLink("Course Assign To Teacher", "Assign", "AssignCourses")</li>
                            <li>@Html.ActionLink("View Assigning Courses", "Assign", "AssignCourses")</li>
                            <li>@Html.ActionLink("View Course Statics", "ViewCourseStatics", "AssignCourses")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Student<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Register Student", "Register", "Students")</li>
                            <li>@Html.ActionLink("View Register's Student", "ViewStudents", "Students")</li>
                            <li>@Html.ActionLink("Enroll In a Course", "Enroll", "EnrollCourses")</li>
                            <li>@Html.ActionLink("View Enroll's Courses", "ViewEnrollCourses", "EnrollCourses")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Room<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Allocate ClassRooms", "Allocate", "AllocateClassRooms")</li>
                            <li>@Html.ActionLink("View Class Schedule", "ViewSchedule", "AllocateClassRooms")</li>
                            <li>@Html.ActionLink("View All Allocations", "ViewAllocations", "AllocateClassRooms")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Result<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Save Student Result", "SaveResult", "SaveResults")</li>
                            <li>@Html.ActionLink("View Result", "ViewResult", "SaveResults")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Clear<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Unassign All Courses", "UnAssignCourse", "AssignCourses")</li>
                            <li id="unallocate">@Html.ActionLink("Unallocate All ClassRooms", "UnallocateClassRoom", "AllocateClassRooms")</li>
                        </ul>
                    </li>


                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>




    <div class="col-md-2" id="sideBar">
        <div class="margin-top-20">
            <a href="@Url.Action("Index", "Home")" class="btn btn-info btn-large btn-block"><span class="glyphicon glyphicon-home"></span>Home</a>
            <br />
            <a href="@Url.Action("Save", "Departments")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-floppy-disk"></span>Save Departmet</a>
            <a href="@Url.Action("ViewDepartments", "Departments")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-eye-open"></span>View All Department</a>
            <br/>
            <a href="@Url.Action("Save", "Courses")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-floppy-disk"></span>Save Course</a>
            <a href="@Url.Action("Save", "Teachers")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-user"></span>Save Teacher</a>
            <br/>
             <a href="@Url.Action("Assign", "AssignCourses")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-adjust"></span>AssignCourse</a>
            <a href="@Url.Action("ViewCourseStatics", "AssignCourses")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-eye-open"></span>View Course Statics</a>
            <br />
            <a href="@Url.Action("Register", "Students")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-user"></span>Register Sudent</a>
            <br/>
            <a href="@Url.Action("Allocate", "AllocateClassRooms")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-time"></span>Allocate Class Room</a>
            <a href="@Url.Action("ViewSchedule", "AllocateClassRooms")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-eye-open"></span>View Class Schedule</a>
            <br />
            <a href="@Url.Action("Enroll", "EnrollCourses")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-dashboard"></span>Enroll Course</a>
            <br />
            <a href="@Url.Action("SaveResult", "SaveResults")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-floppy-disk"></span>Save Student Result</a>
            <a href="@Url.Action("ViewResult", "SaveResults")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-eye-open"></span>View Result</a>
            <br />
            <a href="@Url.Action("UnAssignCourse", "AssignCourses")" class="btn btn-danger btn-large btn-block"><span class="glyphicon glyphicon-trash"></span>Unassign Courses</a>
            <a href="@Url.Action("UnallocateClassRoom", "AllocateClassRooms")" class="btn btn-danger btn-large btn-block"><span class="glyphicon glyphicon-trash"></span>Unallocate Rooms</a>

        </div>
    </div>
    <div class="col-md-10">
        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
    </div>




    <nav class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
        <div class="container" align="center">
            <p style="font-size: 18px; margin-top: 8px; color: white"> Developed By: &copy; @DateTime.Now.Year - MVC-KING (Team)</p>
        </div>
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
